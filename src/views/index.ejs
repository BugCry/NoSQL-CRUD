<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <title>CRUD | Node - Mongo</title>
</head>
<body class="bg-muted">
    
    <%-  include ('api/nav') %>

    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input name="Titulo" type="text" placeholder="input" class="form-control">
                                <textarea name="Descripcion" id="" cols="30" rows="10" class="form-control mt-2 mb-2"></textarea>
                                <button type="submit" class="btn btn-primary btn-block">Enviar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>NÂ°</th>
                        <th>Titulo</th>
                        <th>Descripcion</th>
                        <th>estado</th>
                    </thead>
                    <tbody>
                        <%- cosas %>
                        <% for(var i = 0; i<JSON.stringify(cosas).lenght; i++){%>
                            <%- i %>
                            <tr>
                                <td><%- i+1 %></td>
                                <td><%- cosas[i].Titulo %></td>
                                <td><%- cosas[i].Descripcion %></td>
                                <td><%- cosas[i].status %></td>
                            </tr>
                        <% } %>  
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%-  include ('api/footer') %>

</body>
</html>